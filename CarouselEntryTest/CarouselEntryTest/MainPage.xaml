<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarouselEntryTest.MainPage"
						 Padding="0,50">

	<CarouselView x:Name="Carousel" PositionChanged="Carousel_PositionChanged">
		<CarouselView.ItemTemplate>
			<DataTemplate>
				<StackLayout>
					<Entry BackgroundColor="LightGreen" Text="{Binding}" HorizontalTextAlignment="Center" />
				</StackLayout>
			</DataTemplate>
		</CarouselView.ItemTemplate>
	</CarouselView>

</ContentPage>
